<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{{ 'Les pays du monde' }}{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block navbar %}
            <header>
                <a href="/" class="logo">
                    {{ 'Geogames' }}
                </a>
                <nav>
                    {% if app.user %}
                        <a href="{{ path('app_games') }}">{{ 'Jouer' }}</a>
                        <a href="{{ path('app_dashboard') }}">{{ 'Mon compte' }}</a>
                        <a href="{{ path('app_logout') }}">{{ 'Déconnexion' }}</a>
                    {% else %}
                        <a href="{{ path('app_login') }}">{{ 'Connexion' }}</a>
                        <a href="{{ path('app_register') }}">{{ 'Créer un compte' }}</a>
                    {% endif %}
                </nav>
            </header>
        {% endblock %}
        {% block gamebar %}{% endblock %}
        {% block body %}{% endblock %}
    </body>
</html>
