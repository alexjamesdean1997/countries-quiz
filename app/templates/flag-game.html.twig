{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('FlagGame') }}
{% endblock %}

{% block gamebar %}
<div class="game-bar">
    <div class="game-timer">
        <span id="gameTimerHours">00</span>
        <span class="timer-separator hours-separator">:</span>
        <span id="gameTimerMinutes">00</span>
        <span class="timer-separator">:</span>
        <span id="gameTimerSeconds">00</span>
    </div>
    <div class="success-counter">
        <span class="successes">0</span>
        <span class="total">/ {{ countries|length }}</span>
    </div>
    <div class="game-stop">
        <button id="stopFlagGame" class="btn btn-stop">
            {{ 'Terminer' }}
        </button>
        <a id="restartFlagGame" class="btn btn-start" href="/flag-game" style="display: none;">
            {{ 'Recommencer' }}
        </a>
    </div>
</div>
{% endblock %}
{% block body %}
    <main class="game-container">
        <h1>{{ 'Trouves le pays de chaque drapeau' }}</h1>
        <section class="countries">
            {% for country in countries %}
                <div class="country" data-encrypted="{{ country.encryptedName }}">
                    <div class="flag">
                        <img src="{{ asset("flags/") ~ country.iso2 ~".svg" }}" alt="flag">
                    </div>
                    <div class="name">
                        <label>
                            <input class="name-input input" type="text">
                        </label>
                    </div>
                </div>
            {% endfor %}
        </section>
    </main>
{% endblock %}