{% extends 'base.html.twig' %}

{% block body %}
    <main>
        <h1>{{ 'Les drapeaux des pays du monde' }}</h1>
        <div class="countries">
            {% for country in countries %}
                <div class="country">
                    <img class="flag" src="{{ asset("flags/") ~ country.getFlagImgCode ~".svg"  }}" alt="{{ country.name }} flag">
                    <div class="name">
                        {{ country.name }}
                    </div>
                </div>
            {% endfor %}
        </div>
    </main>
{% endblock %}